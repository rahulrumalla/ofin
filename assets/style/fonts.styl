@require './theme.styl'

@font-face
  font-family Roboto Mono
  font-style normal
  font-weight 400
  src url('~assets/fonts/RobotoMono/RobotoMono-Regular.ttf')

@font-face
  font-family Material Icons
  font-style normal
  font-weight 400
  src url('~assets/fonts/MaterialIcons/MaterialIcons-Regular.woff2')

.material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: 24px;
  line-height: 1;
  letter-spacing: normal;
  text-transform: none;
  display: inline-block;
  white-space: nowrap;
  word-wrap: normal;
  direction: ltr;
  -webkit-font-feature-settings: 'liga';
  -webkit-font-smoothing: antialiased;
}

h4
  color: $theme.secondary
  font-size 34px
  font-weight 400
  line-height 40px
  letter-spacing normal
  margin-bottom 16px

h5
  color: $theme.secondary
  font-size 16px
  margin-bottom 5px

h6
  color: $theme.secondary
  font-size 20px
  font-weight 500
  line-height 1
  letter-spacing .02em

.h--grey-small
  color: $theme.grey
  font-size 14px
  margin-bottom: 0
